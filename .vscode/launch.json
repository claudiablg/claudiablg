  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug npm start",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start-debug"],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Debug All",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--runInBand", "--no-cache", "--config=${workspaceFolder}/config/jest/jest.config.json"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest debug current file",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["${relativeFile}", "--no-cache", "--config=${workspaceFolder}/config/jest/jest.config.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest debug current file (e2e)",
      "env": {
        "APP_URL": "dev-erp.com"
      },
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["${relativeFile}", "--no-cache", "--config=${workspaceFolder}/config/jest/jest-e2e.config.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Debug Current File CI",
      "env": {
        "APP_ENV": "ci"
      },
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["${relativeFile}", "--no-cache", "--config=${workspaceFolder}/config/jest/jest.config.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
