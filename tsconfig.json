/**
 * Root level configuration that is used by VSCode to resolve imports in the monorepo.
 */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true, // to prevent unwanted or accidental output files
    "paths": {
      "@newrade/*": ["./packages/*/src"] // map packages imports to their source files
    },
    "types": []
  },
  "exclude": ["node_modules", "lib", "built", "dist", "public"]
}
