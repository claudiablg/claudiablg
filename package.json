{
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "14"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "autorelease": "lerna version --conventional-commits --create-release github",
    "build": "lerna run --concurrency=1 build",
    "build:mir": "yarn build --scope '{core-*,mir-website}'",
    "changelog": "lerna version --conventional-commits --no-push",
    "clean": "lerna run --concurrency=1 clean",
    "cli": "nr",
    "commit": "lint-staged && git-cz",
    "fork": "ts-node --script-mode scripts/fork-repo.ts",
    "format:changelog": "prettier --write packages/**/CHANGELOG.md --loglevel silent && git add packages/**/CHANGELOG.md",
    "lint": "eslint . --ext js,ts,tsx",
    "lint:fix": "eslint . --ext js,ts,tsx --fix",
    "nvm": "ts-node --script-mode scripts/install-node-nvm.ts",
    "postinstall": "yarn build --scope core-*",
    "push": "git push --follow-tags",
    "reset": "npm i -g rimraf && rimraf -r ./node_modules packages/**/node_modules && yarn",
    "set-permissions": "chmod a+x node_modules/.bin/nr-core-cli",
    "start": "lerna run --parallel start",
    "start:lakhos": "yarn start --scope '{core-*,lakhos-website}'",
    "start:mir": "yarn start --scope '{core-*,mir-website}'",
    "start:newrade": "yarn start --scope '{core-*,newrade-website}'",
    "test": "lerna run --concurrency=1 test",
    "yo": "nr-core-yo-generator"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format:changelog"
    }
  },
  "lint-staged": {
    "**/package.json": [
      "format-package -w"
    ],
    "*.{js,ts,tsx}": [
      "yarn lint:fix"
    ]
  },
  "resolutions": {
    "**/packages/core-design-system": "link:./packages/core-design-system",
    "**/packages/core-react-ui": "link:./packages/core-react-ui",
    "webpack": "^4.43.0"
  },
  "dependencies": {
    "framer-motion": "^2.6.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-treat": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.2.1",
    "@types/expect-puppeteer": "^4.4.3",
    "@types/jest": "^25.2.3",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.11",
    "@types/puppeteer": "^3.0.0",
    "@types/react": "^16.9.35",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-generator": "^3.1.4",
    "@types/yeoman-test": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-treat": "^1.1.0",
    "capsize": "^1.1.0",
    "chalk": "^4.0.0",
    "conventional-changelog-cli": "^2.0.34",
    "copy-webpack-plugin": "^5.0.5",
    "css-loader": "^2.1.1",
    "csstype": "^2.6.3",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "6.x",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-babel-module": "5.1.2",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-markdown": "1.0.2",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "4.0.4",
    "expect-puppeteer": "^4.4.0",
    "format-package": "latest",
    "gatsby": "^2.19.5",
    "gatsby-image": "^2.4.14",
    "gatsby-plugin-manifest": "^2.4.21",
    "gatsby-plugin-sharp": "^2.4.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-environment-puppeteer": "^4.4.0",
    "jest-junit": "^10.0.0",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.9",
    "lodash": "^4.17.15",
    "mini-css-extract-plugin": "^0.10.0",
    "mocha": "^7.2.0",
    "next": "^9.4.4",
    "node-sass": "^4.12.0",
    "prettier": "^2.0.5",
    "puppeteer": "^3.3.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "treat": "^1.4.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2",
    "yo": "^3.1.1"
  }
}
