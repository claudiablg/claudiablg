{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "14"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write packages/**/CHANGELOG.md --loglevel silent && git add packages/**/CHANGELOG.md"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx --fix"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "yo": "core-yo-generator",
    "postinstall": "npm run test:dev-setup",
    "clean": "lerna exec -- yarn clean",
    "build": "lerna exec --concurrency 1 -- yarn build",
    "test": "lerna exec --concurrency 1 -- yarn test",
    "reset": "rimraf -r ./node_modules packages/**/node_modules **/package-lock.json",
    "init": "ts-node --script-mode scripts/install-node-lts.ts",
    "test:dev-setup": "ts-node --script-mode scripts/test-dev-setup.ts",
    "commit": "git-cz",
    "lint": "eslint . --ext js,ts,tsx"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.2.1",
    "@types/expect-puppeteer": "^4.4.3",
    "@types/jest": "^25.2.3",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/node": "^14.0.11",
    "@types/puppeteer": "^3.0.0",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "babel-eslint": "10.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "chalk": "^4.0.0",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-import-resolver-babel-module": "5.1.2",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-markdown": "1.0.2",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.2",
    "expect-puppeteer": "^4.4.0",
    "jest": "^26.0.1",
    "jest-environment-puppeteer": "^4.4.0",
    "jest-junit": "^10.0.0",
    "lerna": "^3.22.0",
    "mocha": "^7.2.0",
    "node": "^14.4.0",
    "prettier": "^1.19.1",
    "puppeteer": "^3.3.0",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "yo": "^3.1.1"
  },
  "dependencies": {
    "@types/mocha": "^7.0.2",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-generator": "^3.1.4",
    "@types/yeoman-test": "^2.0.4",
    "react-dom": "^16.13.1"
  }
}
