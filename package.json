{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "14"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format:changelog"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "nvm": "ts-node --script-mode scripts/install-node-nvm.ts",
    "fork": "ts-node --script-mode scripts/fork-repo.ts",
    "postinstall": "yarn set-permissions && yarn cli check-dev-reqs",
    "start": "lerna exec --parallel -- yarn start",
    "clean": "lerna exec -- yarn clean",
    "build": "lerna exec --concurrency 1 -- yarn build",
    "postbuild": "yarn set-permissions",
    "test": "lerna exec --concurrency 1 -- yarn test",
    "yo": "nr-core-yo-generator",
    "cli": "nr-core-cli",
    "format:changelog": "prettier --write packages/**/CHANGELOG.md --loglevel silent && git add packages/**/CHANGELOG.md",
    "lint": "eslint . --ext js,ts,tsx",
    "lint:fix": "eslint . --ext js,ts,tsx --fix",
    "autorelease": "lerna version --conventional-commits --create-release github",
    "changelog": "lerna version --conventional-commits --no-push",
    "push": "git push --follow-tags",
    "commit": "lint-staged && git-cz",
    "reinstall": "yarn reset && yarn && yarn build && yarn test",
    "set-permissions": "chmod a+x node_modules/.bin/nr-core-cli",
    "reset": "npm i -g rimraf && rimraf -r ./node_modules packages/**/node_modules **/package-lock.json"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-treat": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.2.1",
    "@types/expect-puppeteer": "^4.4.3",
    "@types/jest": "^25.2.3",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.11",
    "@types/puppeteer": "^3.0.0",
    "@types/react": "^16.9.35",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-generator": "^3.1.4",
    "@types/yeoman-test": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "babel-plugin-module-resolver": "^4.0.0",
    "chalk": "^4.0.0",
    "conventional-changelog-cli": "^2.0.34",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "6.x",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-babel-module": "5.1.2",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-markdown": "1.0.2",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "4.0.4",
    "expect-puppeteer": "^4.4.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-environment-puppeteer": "^4.4.0",
    "jest-junit": "^10.0.0",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.9",
    "lodash": "^4.17.15",
    "mocha": "^7.2.0",
    "next": "^9.4.4",
    "prettier": "^2.0.5",
    "puppeteer": "^3.3.0",
    "rimraf": "^3.0.2",
    "treat": "^1.4.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "yo": "^3.1.1"
  }
}
