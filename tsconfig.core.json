/**
 * Special config to build certain packages that should be built after yarn or npm install
 */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "outDir": "lib"
  },
  /**
   * Other packages needed for compilation.
   * Note: please keep in sync with package.json dependencies list
   */
  "references": [
    {
      "path": "./packages/core-types/tsconfig.json"
    },
    {
      "path": "./packages/core-common/tsconfig.json"
    },
    {
      "path": "./packages/core-common/tsconfig.commonjs.json"
    },
    {
      "path": "./packages/core-utils/tsconfig.json"
    },
    {
      "path": "./packages/core-gatsby-config/tsconfig.json"
    },
    {
      "path": "./packages/core-gatsby-config/tsconfig.commonjs.json"
    },
    {
      "path": "./packages/core-webpack-config/tsconfig.json"
    },
    {
      "path": "./packages/core-jest-config/tsconfig.json"
    },
    {
      "path": "./packages/core-design-system/tsconfig.commonjs.json"
    },
    {
      "path": "./packages/core-design-system/tsconfig.json"
    },
    {
      "path": "./packages/core-react-ui/tsconfig.json"
    },
    {
      "path": "./packages/core-gsap-ui/tsconfig.json"
    },
    {
      "path": "./packages/core-contentful-lib/tsconfig.json"
    },
    {
      "path": "./packages/core-figma-extractor/tsconfig.json"
    },
    {
      "path": "./packages/core-website-api/tsconfig.json"
    },
    {
      "path": "./packages/core-website-api/tsconfig.commonjs.json"
    },
    {
      "path": "./packages/core-figma-extractor/tsconfig.commonjs.json"
    },
    {
      "path": "./packages/core-figma-plugins/tsconfig.json"
    },
    {
      "path": "./packages/core-yo-generator/tsconfig.json"
    },
    {
      "path": "./packages/core-design-system-docs/tsconfig.json"
    }
  ],
  "include": ["./packages/core-build/**/*"],
  "exclude": ["**/*"]
}
