{
  "extends": "../../tsconfig.browser-esm.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "types": ["gatsby", "node", "jest"],
    "paths": {
      "@newrade/core-react-ui": ["../core-react-ui/src"],
      "@newrade/core-react-ui/lib/*": ["../core-react-ui/src/*"]
    }
  },
  /**
   * Other packages needed for compilation.
   * Note: please keep in sync with package.json dependencies list
   */
  "references": [
    {
      "path": "../core-design-system/tsconfig.json"
    },
    {
      "path": "../core-website-api/tsconfig.json"
    },
    {
      "path": "../cdpq-design-system/tsconfig.json"
    }
  ],
  "include": ["src/**/*", "docs/**/*", "types/**/*"]
}
