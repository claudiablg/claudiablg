{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "target": "es2017",
    "types": ["node"],
    "outDir": "lib",
    "rootDir": "src",
    // there is no easy way to provide a tsconfig for build and one to
    // enable normal navigation in VSCode so we add the paths here
    "paths": {
      "@newrade/*": ["packages/*/src"]
    }
  },
  "include": ["src", "types", "test"]
}
