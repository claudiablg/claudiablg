{
  "extends": "../../tsconfig.node-esm.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "allowJs": true,
    "lib": ["DOM", "ES2018"],
    "types": ["gatsby", "node", "jest"]
  },
  /**
   * Other packages needed for compilation.
   * Note: please keep in sync with package.json dependencies list
   */
  "references": [
    {
      "path": "../core-types/tsconfig.json"
    },
    {
      "path": "../core-common/tsconfig.json"
    },
    {
      "path": "../core-common/tsconfig.commonjs.json"
    },
    {
      "path": "../core-utils/tsconfig.json"
    },
    {
      "path": "../core-webpack-config/tsconfig.json"
    }
  ],
  "include": ["src/**/*", "types/**/*", "src/plugins/**/package.json"]
}
