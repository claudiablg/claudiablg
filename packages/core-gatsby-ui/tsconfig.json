{
  "extends": "../../tsconfig.browser-esm.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "lib",
    "noEmit": true, // this package should be consumed by /src/ for now
    "types": ["gatsby", "node", "jest"],
    /**
     * We reference the packages below to their src files to make
     * development faster (since tsc rewrite all emmited files)
     */
    "paths": {
      "@newrade/core-react-ui": ["../core-react-ui/src"],
      "@newrade/core-react-ui/lib/*": ["../core-react-ui/src/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"]
}
