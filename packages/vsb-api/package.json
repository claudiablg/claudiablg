{
  "name": "@newrade/vsb-api",
  "version": "1.3.4",
  "description": "API for the vsb website",
  "author": {
    "email": "info@newrade.ca",
    "name": "Newrade",
    "url": "https://github.com/newrade/newrade"
  },
  "repository": "https://github.com/newrade/newrade-core/tree/master/packages/vsb-api",
  "license": "MIT",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "yarn webpack",
    "build:tsc": "tsc --build tsconfig.build.json",
    "clean": "rimraf -r dist/** public/** && rm -f tsconfig.build.tsbuildinfo",
    "inspect": ". ./.env && kill-port --port 9229 && NODE_DEBUG=$NODE_DEBUG DEBUG=$DEBUG node --no-warnings --inspect=0.0.0.0:9229 --experimental-modules ./dist/src/server.js",
    "start": "concurrently \"yarn tsc:watch\" \"yarn watch\"",
    "start:prod": ". ./.env && NODE_DEBUG=$NODE_DEBUG DEBUG=$DEBUG node dist/src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc:watch": "tsc --build tsconfig.build.json --watch --preserveWatchOutput",
    "typecheck": "yarn typecheck:build --watch --preserveWatchOutput",
    "typecheck:build": "tsc --project tsconfig.build.json --noEmit",
    "vercel-deploy": ". ./.env && VERCEL_PROJECT_ID=$VERCEL_PROJECT_ID VERCEL_ORG_ID=$VERCEL_ORG_ID yarn vercel public --token $VERCEL_TOKEN --scope $VERCEL_SCOPE --confirm",
    "watch": "nodemon --delay 500ms --watch dist/ --watch ../vsb-common/lib/ --exec 'yarn inspect'",
    "webpack": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json node -r ts-node/register ../../node_modules/webpack/bin/webpack --config webpack.prod.config.ts",
    "webpack:watch": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json node -r ts-node/register ../../node_modules/webpack/bin/webpack --config webpack.prod.config.ts"
  },
  "dependencies": {
    "@newrade/core-common": "^1.2.3",
    "@newrade/core-types": "^1.4.0",
    "@newrade/core-utils": "^1.6.3",
    "@newrade/core-webpack-config": "^1.5.0",
    "@newrade/vsb-common": "^1.3.3"
  }
}
