{
  "name": "@newrade/vsb-api",
  "version": "1.3.4",
  "description": "API for the vsb website",
  "author": {
    "email": "info@newrade.ca",
    "name": "Newrade",
    "url": "https://github.com/newrade/newrade"
  },
  "repository": "https://github.com/newrade/newrade-core/tree/master/packages/vsb-api",
  "license": "MIT",
  "main": "public/api/server-express.js",
  "scripts": {
    "build": "yarn webpack --config webpack.prod.config.ts",
    "clean": "rimraf -r public/** && rm -f tsconfig.build.tsbuildinfo",
    "nodemon": "nodemon --delay 1000ms --watch public/api/ --watch ../vsb-common/lib/ --exec 'yarn server'",
    "server": ". ./.env && yarn server:kill-port && NODE_DEBUG=$NODE_DEBUG DEBUG=$DEBUG node --no-warnings --inspect=0.0.0.0:9229 --experimental-modules ./public/api/server-express.js",
    "server:kill-port": ". ./.env && kill-port --port $APP_PORT && kill-port --port 9229",
    "start": "concurrently \"yarn nodemon\" \"yarn webpack:dev\"",
    "start:prod": ". ./.env && NODE_DEBUG=$NODE_DEBUG DEBUG=$DEBUG node public/api/src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "vercel-deploy": ". ./.env && VERCEL_PROJECT_ID=$VERCEL_PROJECT_ID VERCEL_ORG_ID=$VERCEL_ORG_ID yarn vercel public --token $VERCEL_TOKEN --scope $VERCEL_SCOPE --confirm",
    "webpack": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json node -r ts-node/register ../../node_modules/webpack/bin/webpack",
    "webpack:dev": "yarn webpack --config webpack.dev.config.ts",
    "webpack:prod": "yarn webpack --config webpack.prod.config.ts"
  },
  "dependencies": {
    "@newrade/core-common": "^1.2.3",
    "@newrade/core-types": "^1.4.0",
    "@newrade/core-utils": "^1.6.3",
    "@newrade/core-webpack-config": "^1.5.0",
    "@newrade/vsb-common": "^1.3.3"
  }
}
