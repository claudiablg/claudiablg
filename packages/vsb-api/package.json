{
  "name": "@newrade/vsb-api",
  "version": "1.1.0",
  "description": "API for the vsb website",
  "author": {
    "email": "info@newrade.ca",
    "name": "Newrade",
    "url": "https://github.com/newrade/newrade"
  },
  "repository": "https://github.com/newrade/newrade-core/tree/master/packages/vsb-api",
  "license": "MIT",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json node -r ts-node/register ../../node_modules/webpack/bin/webpack --config webpack.prod.config.ts",
    "build:tsc": "tsc --build tsconfig.build.json",
    "clean": "rimraf -r dist/** && rm -f tsconfig.build.tsbuildinfo",
    "copy:server": "TS_NODE_PROJECT=tsconfig.script.json node -r ts-node/register scripts/copy-server.script.ts",
    "inspect": "kill-port --port 9229 && node --no-warnings --inspect=0.0.0.0:9229 --experimental-modules ./dist/src/server.js",
    "start": "concurrently \"yarn tsc:watch\" \"yarn watch\"",
    "test": "echo test",
    "tsc:watch": "tsc --build tsconfig.build.json --watch --preserveWatchOutput",
    "watch": "nodemon --delay 500ms --watch dist/ --watch ../vsb-common/lib/ --exec 'yarn inspect'"
  },
  "dependencies": {
    "@newrade/vsb-common": "^1.1.0"
  }
}
