{
  "name": "@newrade/core-design-system",
  "version": "1.14.0",
  "description": "Theme API to style entire application",
  "author": {
    "email": "info@newrade.ca",
    "name": "Newrade",
    "url": "https://github.com/newrade/newrade"
  },
  "repository": {
    "directory": "packages/core-design-system",
    "type": "git",
    "url": "https://github.com/newrade/newrade-core.git"
  },
  "license": "MIT",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/index.js",
  "files": [
    "./lib/**/*"
  ],
  "scripts": {
    "build": "yarn build:commonjs && yarn build:esm",
    "build:commonjs": "tsc --build tsconfig.commonjs.json",
    "build:esm": "tsc --build",
    "clean": "rm -rf lib/** && rm -f *.tsbuildinfo",
    "start": "concurrently \"yarn start:commonjs\" \"yarn start:esm\"",
    "start:commonjs": "tsc --build tsconfig.commonjs.json --watch --preserveWatchOutput --verbose",
    "start:esm": "tsc --build --watch --preserveWatchOutput --verbose"
  },
  "typings": "./lib/index.d.ts"
}
