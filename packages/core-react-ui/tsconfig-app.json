{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./",
    "target": "es6",
    "module": "ESNext",
    "types": ["react", "react-dom"],
    "paths": {
      "core-react-ui": ["./src"]
