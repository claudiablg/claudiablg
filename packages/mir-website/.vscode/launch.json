{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Gatsby develop",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceFolder}/../../node_modules/.bin/gatsby",
      "args": ["develop", "--inspect-brk"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "gatsby:*",
        // see https://gist.github.com/cecilemuller/2963155d0f249c1544289b78a1cdd695
        "TS_NODE_PROJECT": "${workspaceFolder}/../core-gatsby-config/tsconfig.gatsby-config.json"
      },
      "stopOnEntry": false,
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "preLaunchTask": "clean",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    },
    {
      "name": "Gatsby build",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceFolder}/../../node_modules/.bin/gatsby",
      "args": ["build"],
      "stopOnEntry": false,
      "runtimeArgs": ["--nolazy"],
      "sourceMaps": false
    }
  ]
}
